generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Users {
  id String @id @default(uuid())
  email String @unique
  firstname String
  lastname String
  phoneNumber String?
  username String
  password String
  incomes Income[]
  expenses Expense[]
  suppliers Supplier[]
  histories History[]
  role Role @default(EMPLOYEE)
}

model Income {
  id String @id @default(uuid())
  date DateTime
  itemSales Int @default(0)
  itemDiscount Int? @default(0)
  billDiscount Int? @default(0)
  focItem Int? @default(0)
  focBill Int? @default(0)
  totalSales Int
  totalCollection Int
  ppn Int
  service Int @default(0)
  userId String?
  user Users? @relation( fields: [userId],references: [id])
  historyId String?
  histories History? @relation( fields: [historyId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id String  @id @default(uuid())
  evidence String
  price Int @default(0)
  date DateTime @default(now())
  note String?
  // categoryName String
  expenseCategoryId Int? 
  expenseCategory ExpenseCategory? @relation(fields: [expenseCategoryId], references: [id])
  userId String?
  user Users? @relation( fields: [userId],references: [id])
  historyId String?
  histories History? @relation( fields: [historyId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExpenseCategory {
  id Int @id @default(autoincrement())
  name String
  expense Expense[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Supplier {
  id String @id @default(uuid())
  evidence String
  quantity Int
  price Int @default(0)
  discount Int @default(0)
  ppn Int @default(0)
  totalAmount Int
  paymentStatus PaymentStatus
  date DateTime @default(now())
  supplierCompanyId Int?
  supplierCompany SupplierCompany? @relation(references: [id], fields: [supplierCompanyId])
  userId String?
  user Users? @relation( fields: [userId],references: [id])
  historyId String?
  histories History? @relation( fields: [historyId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SupplierCompany {
  id Int @id @default(autoincrement())
  name String
  suppliers Supplier[]
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
}

model History {
  id String @id @default(uuid())
  title String
  date DateTime @default(now())
  month String
  year String
  remainingEmployeeService Int @default(0)
  remainingManagementService Int @default(0)
  remainingTax Int @default(0)
  remainingRawMaterials Int @default(0)
  mdr Float @default(0)
  incomes Income[]
  expenses Expense[]
  suppliers Supplier[]
  userId String?
  user Users? @relation( fields: [userId],references: [id])
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
}


enum PaymentStatus {
  PAID
  UNPAID
}

enum Role {
  EMPLOYEE
  DIRECTOR
}